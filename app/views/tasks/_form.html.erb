<div class="container">
    <form>
        <%= form_with(model: @task, local: true, url: choose_new_or_edit) do |form|%>
            <div class="form-group">
                <label><%= form.label :content %></label>
                <%= form.text_field :content, class: "form-control" %>
            </div>
            <%= form.submit "save", class: "btn btn-primary" %>
        <%end%>
    </form>
</div>